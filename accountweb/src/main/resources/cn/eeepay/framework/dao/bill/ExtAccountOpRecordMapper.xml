<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.eeepay.framework.dao.bill.ExtAccountOpRecordMapper" >
  <resultMap id="BaseResultMap" type="cn.eeepay.framework.model.bill.ExtAccountOpRecord" >
    <id column="account_no" property="accountNo" jdbcType="VARCHAR" />
     <result column="record_date" property="recordDate" jdbcType="TIMESTAMP" />
    <result column="serial_no" property="serialNo" jdbcType="VARCHAR" />
    <result column="operation_type" property="operationType" jdbcType="VARCHAR" />
    <result column="operation_balance" property="operationBalance" jdbcType="DECIMAL" />
    
    <result column="trans_order_no" property="transOrderNo" jdbcType="VARCHAR" />
    <result column="summary_info" property="summaryInfo" jdbcType="VARCHAR" />
  </resultMap>
  
   <resultMap id="OneToOneResultMap" type="cn.eeepay.framework.model.bill.ExtAccountOpRecord" >
     <id column="account_no" property="accountNo" jdbcType="VARCHAR" />
     <result column="record_date" property="recordDate" jdbcType="TIMESTAMP" />
    <result column="serial_no" property="serialNo" jdbcType="VARCHAR" />
    <result column="operation_type" property="operationType" jdbcType="VARCHAR" />
    <result column="operation_balance" property="operationBalance" jdbcType="DECIMAL" />
    <result column="trans_order_no" property="transOrderNo" jdbcType="VARCHAR" />
    <result column="summary_info" property="summaryInfo" jdbcType="VARCHAR" />
     <association property="extAccountInfo" column="account_no"
    		javaType="cn.eeepay.framework.model.bill.ExtAccountInfo">
         <id property="accountNo" column="account_no"/>
         <result property="userId" column="user_id"/>
         <result property="cardNo" column="card_no"/>
         <result property="accountOwner" column="account_owner"/>
         <result property="currencyNo" column="currency_no"/>
    </association>
     <collection property="extTransInfos" javaType="list" select="select_trans_info" column="account_no"
    	ofType="cn.eeepay.framework.model.bill.ExtTransInfo" />  
  </resultMap>
    <select id="select_trans_info"  parameterType="String" resultType="cn.eeepay.framework.model.bill.ExtTransInfo">  
  		select t.* from ext_trans_info as t where t.account_no=#{account_no}
  </select>
</mapper>